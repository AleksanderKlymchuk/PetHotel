<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pet Hotel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top nbc">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h3>@Html.ActionLink("Pet Hotel", "Index", "Home", null, new { @class = "heading" })</h3>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ulcl">
                    <li >@Html.ActionLink("Home", "Index", "Home", new { id = "n1", })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { id = "n2" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { id = "n3" })</li>
                    <li>@Html.ActionLink("Reservations", "Index", "Reservation", new { id = "n4" })</li>
                </ul>




                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Oleksandr Klymchuk</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
